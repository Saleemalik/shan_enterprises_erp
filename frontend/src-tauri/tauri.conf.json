{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",

  "productName": "Shan Enterprises ERP",
  "version": "1.0.0",
  "identifier": "com.shanenterprises.erp",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "title": "Shan Enterprises ERP",
        "width": 1200,
        "height": 800
      }
    ]
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
